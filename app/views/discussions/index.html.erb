


<div class="row">
  <div class="col-sm-6">
    <h1>Discussions</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_discussion_path, class: 'btn btn-primary' do %>
    Add New Discussion
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Title</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @discussions.each do |discussion| %>
        <%= content_tag :tr, id: dom_id(discussion), class: dom_class(discussion) do %>
          

                      <td><%= discussion.title %></td>
          
          
            <td><%= link_to 'Show', discussion %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
