<div class="page-header">
  <%= link_to discussions_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    All Discussions
  <% end %>
  <%= link_to edit_discussion_path(@discussion), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show discussion</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @discussion.title %></dd>

</dl>


<h2>Comments</h2>

<%= render partial: "comments/form", 
           locals: { commentable: @discussion } %>

<%= render @discussion.comments.where(parent_id: nil), max_nesting: 5 %>